<style>

.search-btn {
    background-color: #ff0011;
    color: white;
    border-radius: 2rem;
    padding: 0 1rem 0 1rem;
}
.search-btn i{
  display: inline;
  margin-right: 0.7rem;
}
.search-btn:hover{
  background-color: #ff0011;
  color: white;
}
.search-bar{
  border-radius: 2rem;
  border: #ff0011 solid 1px;
  padding: 1.1rem 3.2rem 1.1rem 3.2rem;
  text-align: center;
  
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top shadow-sm" style="background-color: #ffffff; padding: 0.5rem 2.5rem 0.5rem 2.5rem;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="<%= '/favicon.png' %>" alt="Site Logo" style="height: 5rem; border-radius: 10rem;"></a>
      <button 
        class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbarNav" 
        aria-controls="navbarNav" 
        aria-expanded="false" 
        aria-label="Toggle navigation"
      >
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <div class="navbar-nav ms-auto">

          <form action="/listings"  method="get" novalidate class="needs-validation d-flex">
            <input 
              type="search" 
              name="search" 
              class="form-control me-2 search-bar" 
              placeholder="Search destinations " 
              value="<%= typeof search !== 'undefined' ? search : '' %>"
              oninput="this.form.action = '/listings?search=' + encodeURIComponent(this.value)"
              required
            >
            <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>

        </div>

        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">List a property</a>
          <% if (!currentUser) { %>
            <a class="nav-link "  href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Login</b></a>
          <% } %>
          <% if (currentUser) { %>
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          <% } %>
          
        </div>
      </div>
    </div>
</nav>

